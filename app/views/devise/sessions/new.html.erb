<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),
	html:{class:'form-horizontal', id:'sign_in_form'}) do |f| %>
	<div class="control-group">
  	<%= f.label :email, class:'control-label' %>
  	<div class="controls">
  		<%= f.email_field :email, placeholder:'Enter email address' %>
  	</div>
	</div>

	<div class="control-group">
  	<%= f.label :password, class:'control-label' %>
  	<div class="controls">
  		<%= f.password_field :password, placeholder:'Enter password' %>
  	</div>
  </div>

  <div class="control-group">
  	<div class="controls">
		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me , style:'display:inline;'%> <%= f.label :remember_me, style:'display:inline;' %></div>
		  <% end -%>
		</div>
	</div>

  <div class="control-group">
  	<div class="controls">
  		<%= f.submit "Sign in", class:'btn btn-inverse' %>
  	</div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<script type="text/javascript">
$(document).ready(function() {
  $("#sign_in_form").validate({
      onfocusout: function(element) { $(element).valid(); } ,

      rules: {
          "user[email]":{
              required: true,
          },
          "user[password]":{
              required: true,
          },
      },
      messages: {
          "user[email]":{
              required: "The emaill address is required",
          },
          "user[password]":{
              required: "The password is required",
          },
      },
      errorElement: "div",
  });
});
</script>